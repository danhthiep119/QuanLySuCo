<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellowLight">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/groupButton">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="Trạng thái:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtInfoStatus"
                    android:layout_span="12"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="Tiêu đề:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtInfoTitle"
                    android:layout_span="12"
                    android:inputType="textMultiLine|text"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="Địa chỉ:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtInfoAddress"
                    android:layout_span="12"
                    android:inputType="textMultiLine|text"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="Nội Dung:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtInfoDecription"
                    android:layout_span="12"
                    android:inputType="textMultiLine|text"
                    android:textSize="16sp" />
            </TableRow>

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gvImage"
                android:numColumns="3">

            </GridView>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnReInfo"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="Sửa"/>

        <Button
            android:id="@+id/btnBack"
            android:text="Trở lại"
            android:layout_width="75dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
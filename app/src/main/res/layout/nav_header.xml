<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorYellow"
    tools:context="view.Main">

    <ImageView
        android:id="@+id/imgProfileUser"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/txtProfileUser"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgProfileUser"
        app:layout_constraintTop_toTopOf="@+id/imgProfileUser"
        />

    <TextView
        android:id="@+id/txtProfilePhone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfileUser"
        app:layout_constraintEnd_toEndOf="@+id/txtProfileUser"
        app:layout_constraintStart_toStartOf="@+id/txtProfileUser"
        app:layout_constraintTop_toBottomOf="@+id/txtProfileUser" />
</androidx.constraintlayout.widget.ConstraintLayout>